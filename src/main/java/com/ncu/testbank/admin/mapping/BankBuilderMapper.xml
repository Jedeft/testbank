<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ncu.testbank.admin.dao.IBankBuilderDao" >

	<resultMap id="BaseResultMap" type="com.ncu.testbank.admin.data.Teacher" >
	  <id column="teacher_id" property="teacher_id"/>
	  <result column="academy_id" property="academy_id"/>
	  <result column="name" property="name"/>
	  <result column="email" property="email"/>
	  <result column="phone" property="phone"/>
	  <result column="qq" property="qq"/>
	</resultMap>
	
	<sql id="Base_Column_List">
		teacher_id, academy_id, name, email, phone, qq
	</sql>
	
	<select id="getCount" resultType="java.lang.Integer">
		SELECT 
			COUNT(*)
		FROM
			bankbuilder_v
		<where>
			<if test="teacher_id != null and teacher_id != ''">
				teacher_id = #{teacher_id}
			</if>
			<if test="academy_id != null and academy_id != ''">
				AND academy_id = #{academy_id}
			</if>
			<if test="name != null and name != ''">
				AND name = #{name}
			</if>
		</where>
	</select>
	
	<select id="searchData" resultMap="BaseResultMap">
		SELECT 
			<include refid="Base_Column_List"></include>
		FROM 
			bankbuilder_v
		<where>
			<if test="teacher_id != null and teacher_id != ''">
				teacher_id = #{teacher_id}
			</if>
			<if test="academy_id != null and academy_id != ''">
				AND academy_id = #{academy_id}
			</if>
			<if test="name != null and name != ''">
				AND name = #{name}
			</if>
		</where>
		LIMIT ${page * rows}, #{rows}
	</select>
	
	<select id="getBankBuilder" resultMap="BaseResultMap" parameterType="java.lang.String">
		SELECT 
			<include refid="Base_Column_List"></include>
		FROM 
			bankbuilder_v
		WHERE 
			teacher_id = #{teacher_id}
		LIMIT 1
	</select>
	
	<insert id="insertOne" parameterType="java.lang.String">
		INSERT INTO 
			user_role
		VALUES
			(#{teacher_id},5,1)
	</insert>
	
	<delete id="deleteOne" parameterType="java.lang.String">
		DELETE FROM
			user_role
		WHERE
			username = #{teacher_id}
		AND
			role_id = 5
	</delete>
	
	<delete id="deleteData" parameterType="java.lang.String">
		DELETE FROM
			user_role
		WHERE
			username in
			<foreach item="teacher_id" index="index" collection="list" open="(" separator="," close=")">
				#{teacher_id}
			</foreach>
		AND
			role_id = 5
	</delete>
  
</mapper>